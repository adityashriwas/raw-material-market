{
  "info": {
    "name": "Raw Material Marketplace API",
    "description": "API collection for Raw Material Marketplace e-commerce platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"buyer\",\n  \"phone\": \"1234567890\",\n  \"company\": {\n    \"name\": \"ACME Corp\",\n    \"type\": \"Manufacturer\"\n  },\n  \"address\": {\n    \"country\": \"United States\",\n    \"city\": \"New York\",\n    \"state\": \"NY\",\n    \"zip\": \"10001\",\n    \"street\": \"123 Main St\"\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST", 
            "url": "{{baseUrl}}/api/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/auth/me",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/products",
            "query": [
              {
                "key": "page",
                "value": "1"
              },
              {
                "key": "limit",
                "value": "20"
              },
              {
                "key": "category",
                "value": "{{categoryId}}"
              },
              {
                "key": "supplier",
                "value": "{{supplierId}}"
              },
              {
                "key": "search",
                "value": "chemical"
              },
              {
                "key": "minPrice",
                "value": "100"
              },
              {
                "key": "maxPrice",
                "value": "1000"
              },
              {
                "key": "unit",
                "value": "kg"
              },
              {
                "key": "status",
                "value": "active"
              },
              {
                "key": "sortBy",
                "value": "createdAt"
              },
              {
                "key": "sortOrder",
                "value": "desc"
              }
            ]
          }
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/products/{{productId}}"
          }
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/products",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Sample Product\",\n  \"description\": \"Product description\",\n  \"category\": \"{{categoryId}}\",\n  \"images\": [\"/api/placeholder/400/300\"],\n  \"specifications\": {\n    \"purity\": \"99.5%\",\n    \"grade\": \"Industrial Grade\",\n    \"appearance\": \"White powder\",\n    \"packaging\": \"25kg bags\",\n    \"shelfLife\": \"2 years\",\n    \"storageConditions\": \"Store in dry place\"\n  },\n  \"pricing\": {\n    \"basePrice\": 100,\n    \"currency\": \"USD\",\n    \"unit\": \"kg\",\n    \"minimumOrderQuantity\": 10\n  },\n  \"inventory\": {\n    \"quantity\": 1000,\n    \"location\": {\n      \"warehouse\": \"Main Warehouse\",\n      \"address\": \"456 Storage St\"\n    }\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/api/products/{{productId}}",
            "header": [
              {
                "key": "Authorization", 
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Product Name\",\n  \"description\": \"Updated description\",\n  \"pricing\": {\n    \"basePrice\": 150\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Delete Product",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/api/products/{{productId}}",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Add Product Review",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/products/{{productId}}/reviews",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rating\": 5,\n  \"comment\": \"Excellent product quality and delivery\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        }
      ]
    },
    {
      "name": "Categories",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/categories"
          }
        },
        {
          "name": "Get Category by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/categories/{{categoryId}}"
          }
        },
        {
          "name": "Create Category",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/categories",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New Category\",\n  \"description\": \"Category description\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/orders",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"product\": \"{{productId}}\",\n      \"quantity\": 20,\n      \"pricePerUnit\": 100\n    }\n  ],\n  \"shipping\": {\n    \"address\": \"123 Street\",\n    \"city\": \"City\",\n    \"state\": \"State\",\n    \"country\": \"Country\",\n    \"zip\": \"12345\"\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Get User Orders",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/orders",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Get Order by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/orders/{{orderId}}",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/api/orders/{{orderId}}/status",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"processing\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/users",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Get All Suppliers",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/users/suppliers"
          }
        }
      ]
    },
    {
      "name": "Suppliers",
      "item": [
        {
          "name": "Get All Suppliers",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/suppliers"
          }
        },
        {
          "name": "Get Supplier Products",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/suppliers/{{supplierId}}/products"
          }
        },
        {
          "name": "Get Supplier Dashboard",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/suppliers/dashboard",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    }
  ]
}
